  <script>
    function toggleDetails(detailsId) {
      const detailsElement = document.getElementById(detailsId);
      if (detailsElement.style.display === 'none' || detailsElement.style.display === '') {
        detailsElement.style.display = 'block';
      } else {
        detailsElement.style.display = 'none';
      }
    }
  </script>
  <script>
    let currentPage = 1;
    const recordsPerPage = 10;
    const totalUsers = parseInt(document.querySelector('.body-wrapper').getAttribute('data-total-users'));
    const totalPages = Math.ceil(totalUsers / recordsPerPage);

    function showPage(page) {
      const start = (page - 1) * recordsPerPage;
      const end = start + recordsPerPage;
      const tableRows = document.querySelectorAll(".resident-card");

      tableRows.forEach((row, index) => {
        row.style.display = (index >= start && index < end) ? "" : "none";
      });

      document.getElementById("pageInfo").textContent = `Page ${page} of ${totalPages}`;
      document.getElementById("prevPage").disabled = page === 1;
      document.getElementById("nextPage").disabled = page === totalPages;
    }

    function changePage(direction) {
      currentPage += direction;
      if (currentPage < 1) currentPage = 1;
      if (currentPage > totalPages) currentPage = totalPages;
      showPage(currentPage);
    }

    document.addEventListener("DOMContentLoaded", () => showPage(currentPage));

    function downloadPDF() {
      const { jsPDF } = window.jspdf;
      const doc = new jsPDF('landscape');
      doc.text("List of Residents Registered", 14, 16);
      doc.autoTable({
        html: '#residentsTable',
        startY: 20,
        headStyles: { fillColor: [52, 152, 219] },
        theme: 'grid',
        styles: { fontSize: 10, cellPadding: 2 },
        margin: { top: 20 },
      });
      doc.save('Registered_Residents_List.pdf');
    }

    function searchTable() {
      const input = document.getElementById("searchInput").value.toLowerCase();
      const rows = document.querySelectorAll(".resident-card");

      rows.forEach(row => {
        const text = row.textContent.toLowerCase();
        row.style.display = text.includes(input) ? "" : "none";
      });
    }
    


    // Function to show the deactivate modal with the user ID
function showDeactivateModal(userID) {
  // Store the userID in a hidden input or data attribute to use later
  document.getElementById('deactivateModal').setAttribute('data-user-id', userID);
  // Show the modal
  $('#deactivateModal').modal('show');
}

// Function to handle the deactivation action
function deactivateAccount() {
  // Get the userID stored in the modal data attribute
  const userID = document.getElementById('deactivateModal').getAttribute('data-user-id');

  // Send the deactivation request (e.g., to the backend via AJAX)
  fetch('/deactivate-user', {
    method: 'POST',
    headers: {
      'Content-Type': 'application/json',
    },
    body: JSON.stringify({ userID }),
  })
  .then(response => response.json())
  .then(data => {
    if (data.success) {
      // Handle success (e.g., reload the table, show success message)
      alert('Account deactivated successfully!');
      location.reload();
    } else {
      // Handle error
      alert('Failed to deactivate the account.');
    }
  })
  .catch(error => {
    console.error('Error:', error);
    alert('Something went wrong.');
  });

  // Close the modal after the action
  $('#deactivateModal').modal('hide');
}

  </script>
