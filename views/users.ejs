                placeholder="Search Residents..." onkeyup="searchTable()" />

                <div class="table-responsive">
                  <div id="residentsTable">
                    <% for (let i in user) { %>
                    <div class="resident-card">
                      <img src="<%= user[i].profileImage || 'default-avatar.jpg' %>" alt="Resident Image" class="resident-image">
                      <div class="resident-details">
                        <p><strong>Resident ID:</strong> <%= user[i].userID %></p>
                        <div id="<%= i %>" class="resident-extra-details" style="display: none;">
                          <p><strong>Email:</strong> <%= user[i].email %></p>
                          <p><strong>Name:</strong> <%= user[i].fullname %></p>
                          <p><strong>Phone:</strong> (+63) <%= user[i].phone %></p>
                          </div>
                      </div>
                      <div class="resident-actions">
                        <button class="btn btn-secondary" onclick="toggleDetails('<%= i %>')">
                          View Details
                          <span class="dropdown-icon">&#9660;</span>
                        </button>
                        <button class="btn btn-warning" onclick="showDeactivateModal('<%= user[i].userID %>')">Deactivate</button>
                      </div>
                    </div>
                    <% } %>
                  </div>
                
             <!-- Pagination Controls -->
