      var username = $("input[name='username']").val();
      var password = $("input[name='password']").val();

      $.ajax({
        type: "POST",
        url: "/login", // Your server-side login URL
        data: { username: username, password: password },
        success: function (response) {
          console.log('hi');
          
          // Assuming a successful login response redirects the user
          window.location.reload('/dashboard'); // Adjust to your actual redirect page
        },
        error: function (error) {
      console.error("Error:", error);
      // Show improved error message using a confirmation/toast box
      showConfirmationMessage('error', 'Please check your username or password and try again.');
     }

      });
    });
  // Show/hide check icon for new password
  $("#newPassword").on('input', function () {
    if (validatePassword($(this).val())) {
      $("#newPasswordCheck").show(); // Show check icon if valid
    } else {
      $("#newPasswordCheck").hide(); // Hide check icon if invalid
    }
  });

  // Show/hide check icon for confirm password
  $("#confirmPassword").on('input', function () {
    if ($(this).val() === $("#newPassword").val() && validatePassword($(this).val())) {
      $("#confirmPasswordCheck").show(); // Show check icon if passwords match and are valid
    } else {
      $("#confirmPasswordCheck").hide(); // Hide check icon if they don't match
    }
  });

  // AJAX form submission for Forgot Password
  $("#forgotPasswordForm").submit(function (event) {
    event.preventDefault(); // Prevent the form from submitting normally
    var email = $("#emailInput").val(); // Get email input value
    $.ajax({
      type: "POST",
      url: "/forgot-password",
      data: { email: email },
      success: function (response) {
        $("#usernameInput").val(email); // Store the email in the hidden input for OTP verification
        $("#forgotPasswordModal").modal('hide'); // Hide the forgot password modal
        $("#otpModal").modal('show'); // Show the OTP modal
      },
      error: function (error) {
        console.error("Error:", error);
        showConfirmationMessage("Error sending OTP. Email is not Found! Please try again.");
      }
    });
  });

  // AJAX form submission for OTP verification
  $("#verifyOtpForm").submit(function (event) {
    event.preventDefault(); // Prevent the form from submitting normally
    var otp = $("#otpInput").val(); // Get OTP input value
    var username = $("#usernameInput").val(); // Get the stored username (email)
    $.ajax({
      type: "POST",
      url: "/verify-otp",
      data: { otp: otp, username: username },
      success: function (response) {
        $("#otpModal").modal('hide'); // Hide the OTP modal
        $("#resetUsernameInput").val(username); // Pass the username to the reset password form
        $("#resetPasswordModal").modal('show'); // Show the password reset modal
      },
      error: function (error) {
        console.error("Error:", error);
        showConfirmationMessage("Invalid OTP. Please try again.");
      }
    });
  });

  // Password reset form submission
  $("#resetPasswordForm").submit(function (event) {
    event.preventDefault(); // Prevent the form from submitting normally
    var newPassword = $("#newPassword").val();
    var confirmPassword = $("#confirmPassword").val();

    // Validate password length, special characters, and capital letter
    if (!validatePassword(newPassword)) {
      showConfirmationMessage("Password must be at least 8 characters long, contain 1 uppercase letter and 1 special character.");
      return;
    }

    // Check if new password matches confirm password
    if (newPassword !== confirmPassword) {
      showConfirmationMessage("Passwords do not match.");
      return;
    }

    // AJAX request for password reset
    $.ajax({
      type: "POST",
      url: "/reset-password",
      data: { newPassword: newPassword, username: $("#resetUsernameInput").val() },
      success: function (response) {
        // Alert user that password reset was successful
        showConfirmationMessage("Password reset successful. Redirecting to login page.");
        // Reload login page
        window.location.href = '/login';
      },
      error: function (error) {
        console.error("Error:", error);
        showConfirmationMessage("Error resetting password. Please try again.");
      }
    });
  });
});

  </script>
  <script>
    function showConfirmationMessage(type, message) {
      // Create a new div element for the message box
      const confirmationBox = document.createElement('div');
      confirmationBox.className = `confirmation-message-box ${type} show`; // Apply the appropriate styles for success/error
      confirmationBox.innerHTML = `
        <i class="confirmation-message-icon fas fa-${type === 'success' ? 'check-circle' : 'exclamation-circle'} ${type}"></i>
        <div class="confirmation-message-content">${message}</div>
        <button class="confirmation-message-close" aria-label="Close">
          <i class="fas fa-times"></i>
        </button>
      `;
  
      // Append the confirmation box to the body
      document.body.appendChild(confirmationBox);
  
      // Auto-hide the message after 4 seconds
      setTimeout(() => {
        confirmationBox.classList.add('fade-out');
        setTimeout(() => {
          confirmationBox.remove();
        }, 500); // Wait for the fade-out transition to complete before removing
      }, 4000);
  
      // Close button click event to manually close the box
      const closeButton = confirmationBox.querySelector('.confirmation-message-close');
      closeButton.addEventListener('click', () => {
        confirmationBox.classList.add('fade-out');
        setTimeout(() => {
          confirmationBox.remove();
        }, 500);
      });
    }
  </script>
  
  
