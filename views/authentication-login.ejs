   <style>
    /* Enhanced CSS for Confirmation Message Box */
    .confirmation-message-box {
      display: flex;
      align-items: center;
      justify-content: space-between;
      padding: 20px;
      border-radius: 12px;
      max-width: 400px;
      margin-right: 110px;
      box-shadow: 0 8px 24px rgba(0, 0, 0, 0.2);
      position: fixed;
      top: 100px;
      right: 120px;
      transition: transform 0.5s ease, opacity 0.5s ease;
      transform: translateX(150%);
      opacity: 0;
    }
  
    .confirmation-message-box.show {
      transform: translateX(0%);
      opacity: 1;
    }
  
    /* Success and Error Styling */
    .confirmation-message-box.success {
      background-color: #e6f9ee;
      border-left: 6px solid #34a853;
    }
  
    .confirmation-message-box.error {
      background-color: #fcebea;
      border-left: 6px solid #d93025;
    }
  
    /* Icon Styles */
    .confirmation-message-icon {
      font-size: 24px;
      margin-right: 15px;
    }
  
    .confirmation-message-icon.success {
      color: #34a853;
    }
  
    .confirmation-message-icon.error {
      color: #d93025;
    }
  
    /* Message Content Styles */
    .confirmation-message-content {
      flex: 1;
      font-size: 16px;
      color: #333;
    }
  
    /* Close Button Styles */
    .confirmation-message-close {
      background: transparent;
      border: none;
      font-size: 18px;
      cursor: pointer;
      color: #666;
      transition: color 0.3s ease;
    }
  
    .confirmation-message-close:hover {
      color: #000;
    }
  
    /* Fade-out Transition */
    .fade-out {
      opacity: 0;
      transform: translateX(150%);
    }
  </style>
  
  
  
    
    
