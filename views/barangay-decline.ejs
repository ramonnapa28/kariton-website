  <script>
    // Pagination logic
    const rows = Array.from(document.querySelectorAll('#tableBody tr'));
    const itemsPerPage = 10;
    let currentPage = 1;

    function showPage(page) {
      const start = (page - 1) * itemsPerPage;
      const end = page * itemsPerPage;

      rows.forEach((row, index) => {
        row.style.display = index >= start && index < end ? 'table-row' : 'none';
      });

      document.getElementById('prevBtn').disabled = page === 1;
      document.getElementById('nextBtn').disabled = end >= rows.length;

      document.getElementById('pageNumberDisplay').textContent = `Page ${page}`;
    }

    function nextPage() {
      if (currentPage * itemsPerPage < rows.length) {
        currentPage++;
        showPage(currentPage);
      }
    }

    function prevPage() {
      if (currentPage > 1) {
        currentPage--;
        showPage(currentPage);
      }
    }

    // Search functionality


    document.getElementById('searchInput').addEventListener('keyup', function () {
      const filter = this.value.toLowerCase();

      rows.forEach(row => {
        const textContent = Array.from(row.cells).map(cell => cell.innerText.toLowerCase()).join(' ');
        row.style.display = textContent.includes(filter) ? '' : 'none';
      });

      currentPage = 1;
      showPage(currentPage);
    });

    // Initial page load
    document.addEventListener('DOMContentLoaded', () => showPage(currentPage));

    // PDF generation function
    function generatePDF() {
      const { jsPDF } = window.jspdf;
      const doc = new jsPDF();

      doc.setFontSize(18);
      doc.text("List of Approved Barangay", 14, 20);

      const columns = ["Barangay Name", "Barangay", "Location", "Approval Date", "Created At"];
      const rows = [];

      document.querySelectorAll("#barangayTable tbody tr").forEach(row => {
        const rowData = Array.from(row.querySelectorAll("td")).map(cell => cell.innerText);
        rows.push(rowData);
      });

      doc.autoTable({
        head: [columns],
        body: rows,
        startY: 30,
        theme: 'grid',
        headStyles: { fillColor: [22, 160, 133] },
      });

      doc.save("barangay_report.pdf");
    }
    

      function searchTable() {
      const input = document.getElementById("searchInput").value.toLowerCase();
      const rows = document.querySelectorAll("#barangayTable tbody tr");

      rows.forEach(row => {
        const text = row.textContent.toLowerCase();
        row.style.display = text.includes(input) ? "" : "none";
      });
    }

    document.addEventListener("DOMContentLoaded", function() {
  const viewButtons = document.querySelectorAll('.view-details');

  viewButtons.forEach(button => {
    button.addEventListener('click', function() {
      const barangayData = JSON.parse(this.getAttribute('data-barangay'));
      const detailsContainer = document.getElementById('barangayDetails');
      
      detailsContainer.innerHTML = `
        <p><strong>Barangay Name:</strong> ${barangayData.bName}</p>
        <p><strong>Barangay Head:</strong> ${barangayData.capName}</p>
        <p><strong>Location:</strong> ${barangayData.bLocation}</p>
        <p><strong>Approval Date:</strong> ${barangayData.approvalDate}</p>
        <p><strong>Created At:</strong> ${barangayData.dateOfReg}</p>
      `;
    });
  });
});

    
