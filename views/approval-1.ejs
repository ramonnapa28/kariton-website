        <div class="card">
          <div class="card-body">
            <h5 class="card-title fw-semibold mb-4 fs-8">Pending Barangay Account</h5> 

            <!-- Search Field -->
            <input type="text" id="searchInput" class="form-control mb-2"
            placeholder="Search Barangays..." onkeyup="searchTable()" />
          
            <div id="barangayList" class="row">
              <% for (let i = junk.length - 1; i >= 0; i--) { %>
              <div class="col-md-4">
                <div class="mt-5" data-status="<%= junk[i].isApproved %>">
                  <div class="card-body-box text-center">
                    <!-- Image of Barangay -->
                    <img src="data:image/png;base64,<%= junk[i].bImg %>" alt="Barangay Image" class="barangay-image w-100 mb-3" />
          
                    <!-- Barangay Name -->
                    <h5 class="card-title fw-semibold mb-2"><%= junk[i].bName %></h5>
          
                    <!-- View Details Button -->
                    <a href="/<%= junk[i]._id %>/barangay-view" class="btn btn-primary mt-2 each-card">View Details</a>
                  </div>
                </div>
              </div>
              <% } %>
            </div>
          
            <!-- Pagination Controls -->
            <div class="pagination-wrapper">
              <button class="pagination-btn" onclick="prevPage()" id="prevBtn" disabled>Previous</button>
              <span id="pageNumberDisplay" class="page-number-display">Page 1</span>
              <button class="pagination-btn" onclick="nextPage()" id="nextBtn">Next</button>
            </div>
