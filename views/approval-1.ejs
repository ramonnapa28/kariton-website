    <script>
      let currentPage = 1;
      const itemsPerPage = 5;
      
      function updatePagination() {
        document.getElementById('pageNumberDisplay').textContent = `Page ${currentPage}`;
        document.getElementById('prevBtn').disabled = currentPage === 1;
        document.getElementById('nextBtn').disabled = currentPage === Math.ceil(junk.length / itemsPerPage);
      }
      
      function nextPage() {
        if (currentPage < Math.ceil(junk.length / itemsPerPage)) {
          currentPage++;
          updatePagination();
        }
      }

      function prevPage() {
        if (currentPage > 1) {
          currentPage--;
          updatePagination();
        }
      }
      
      document.getElementById('filter-status').addEventListener('change', function() {
        let filterValue = this.value;
        const cards = document.querySelectorAll('.card');
        cards.forEach(card => {
          const cardStatus = card.getAttribute('data-status');
          if (!filterValue || filterValue === cardStatus) {
            card.style.display = 'block';
          } else {
            card.style.display = 'none';
          }
        });
      });
      
      updatePagination();
    </script>
    <script>
      // Wait until the DOM is fully loaded
      document.getElementById('filter-status').addEventListener('change', function() {
    const filterValue = this.value;
    const cards = document.querySelectorAll('.card[data-status]');

    cards.forEach(card => {
      const status = card.getAttribute('data-status');
      let display = 'none';

      // Check the selected filter value and match with the data-status
      if (filterValue === '' ||  // If no filter is selected, show all
        (filterValue === 'approved' && status === 'true') ||  // Filter approved
        (filterValue === 'rejected' && status === 'false') || // Filter rejected
        (filterValue === 'pending' && status === "")) {  // Filter pending (null)
        display = 'block';  // Show matching items
      }

      card.style.display = display;  // Apply the display style
    });
  });
      document.querySelectorAll(".btn-success").forEach(button => {
        button.addEventListener("click", function() {
          sendApproval(this.getAttribute("data-id"), true);
        });
      });
    
      document.querySelectorAll(".btn-danger").forEach(button => {
        button.addEventListener("click", function() {
          sendApproval(this.getAttribute("data-id"), false);
        });
      });
    
      function sendApproval(applicantId, approved) {
        fetch('/dashboard/barangayapproval', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json'
          },
          body: JSON.stringify({
            applicantId: applicantId,
            approved: approved
          })
        })
        .then(response => {
          if (response.ok) {
            // Reload the page after successful approval/rejection
            window.location.reload('/dashboard/barangayapproval'); // This ensures the page reloads
          } else {
            console.error('Error:', response);
          }
        })
        .catch(error => {
          console.error('Error:', error);
        });
      }
