      <script>
        function openModal(imageBase64) {
          document.getElementById('modalImage').src = 'data:image/png;base64,' + imageBase64;
          $('#imageModal').modal('show');
        }

        function confirmApprove(id) {
          if (confirm('Are you sure you want to approve this junkshop?')) {
            approveBarangay(id);
          }
        }

        function confirmReject(id) {
          if (confirm('Are you sure you want to reject this junkshop?')) {
            rejectBarangay(id);
          }
        }
      </script>
          <script>
            // Wait until the DOM is fully loaded
            document.getElementById('filter-status').addEventListener('change', function() {
          const filterValue = this.value;
          const cards = document.querySelectorAll('.card[data-status]');
      
          cards.forEach(card => {
            const status = card.getAttribute('data-status');
            let display = 'none';
      
            // Check the selected filter value and match with the data-status
            if (filterValue === '' ||  // If no filter is selected, show all
              (filterValue === 'approved' && status === 'true') ||  // Filter approved
              (filterValue === 'rejected' && status === 'false') || // Filter rejected
              (filterValue === 'pending' && status === "")) {  // Filter pending (null)
              display = 'block';  // Show matching items
            }
      
            card.style.display = display;  // Apply the display style
          });
        });
            document.querySelectorAll(".btn-success").forEach(button => {
              button.addEventListener("click", function() {
                sendApproval(this.getAttribute("data-id"), true);
              });
            });
          
            document.querySelectorAll(".btn-danger").forEach(button => {
              button.addEventListener("click", function() {
                sendApproval(this.getAttribute("data-id"), false);
              });
            });
          
            function sendApproval(applicantId, approved) {
              fetch('/dashboard/pending', {
                method: 'POST',
                headers: {
                  'Content-Type': 'application/json'
                },
                body: JSON.stringify({
                  applicantId: applicantId,
                  approved: approved
                })
              })
              .then(response => {
                if (response.ok) {
                  // Reload the page after successful approval/rejection
                  window.location.reload('/dashboard/pending'); // This ensures the page reloads
                } else {
                  console.error('Error:', response);
                }
              })
              .catch(error => {
                console.error('Error:', error);
              });
            }
          </script>
